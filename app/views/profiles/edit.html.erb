<div class= 'container'>
  <div class= 'row'>
    <div class= 'column'>
      <h2>Modifier ce profil</h2>
        <%= simple_form_for @profile do |f| %>
        <%= f.error_notification %>

          <div class="form-inputs">

            <%= f.input :nickname, label: 'Nom',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nickname" }%>
            <%= f.input :picture, as: :file,
                label: "Photo de profil",
                required: false,
                input_html: { autocomplete: "picture" } %>
            <%= f.input :category_id, collection: Category.pluck(:name, :id) %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Mettre Ã  jour" %>
          </div>
        <% end %>
        <%= link_to "Supprimer ce profil", profiles_path %>
        <%= link_to "Retour", :back %>

    </div>
  </div>
</div>
