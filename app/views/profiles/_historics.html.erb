
<ul>
  <% @visits.last(15).reverse.each do |visit| %>
    <li>
      <a href="<%= visit.url %>" target="_blank" class="link-url">
      <span> site: <%= visit.title %></span>
      ---
      </a>
      <span> Total de mots modifiés: <%= visit.words_changed %></span>
       ---
      <span> le : <%= visit.date.strftime("%d/%m/%Y à %H:%M") %></span>
    </li>
  <% end %>
</ul>


